@page
@model Youth_Clinic.Pages.Services.editModel
@{
}

<br>
<h2>Edit Service</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage  </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">

    <input type="hidden" name="id" value="@Model.ServicesInfo.serviceid">

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Medical Service</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="medical_service" value="@Model.ServicesInfo.medical_service">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Doctor</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="doctor_name" value="@Model.ServicesInfo.doctor_name">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Department</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="service_department" value="@Model.ServicesInfo.service_department">
        </div>
    </div>



    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="service_description" value="@Model.ServicesInfo.service_description">
        </div>
    </div>


    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="price" value="@Model.ServicesInfo.price">
        </div>
    </div>


    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>

    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>
