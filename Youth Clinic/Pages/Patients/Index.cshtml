<a class='btn btn-primary btn-sm' href='/Patients/create'>New Patient</a>
<br>
<br>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Gender</th>
            <th>Date of birth</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listPatients)
        {
            <tr>
                <td>@item.patient_name</td>
                <td>@item.gender</td>
                <td>@item.date_of_birth</td>
                <td>@item.phone_number</td>
                <td>@item.email</td>
                <td>@item.address</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Patients/edit?id=@item.patientid">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Patients/delete?id=@item.patientid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
